<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_fragment_player"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/create_team"
        android:layout_gravity="center"/>

    <com.andview.refreshview.XRefreshView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:xrefreshview="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/xfv_fragment_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        xrefreshview:autoRefresh="true" >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/gv_fragment_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         />
    </com.andview.refreshview.XRefreshView>
</FrameLayout>

